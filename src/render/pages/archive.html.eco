---
title: Story Archive
layout: page
pageOrder: 1
---
<% chunk = (story) => %>
	<div class="media">
		<% if story.extUrl: %>
		<a href="<%= story.extUrl %>">
		<% else: %>
		<a href="<%= @getUrl(story.url) %>">
		<% end %>
			<div class="media-left">
				<div class="date">
					<div class="month"><%= @moment(story.date).format('MMM') %>.</div>
					<div class="day"><%= @moment(story.date).format('D') %></div>
					<div class="year"><%= @moment(story.date).format('YYYY') %></div>
				</div>
			</div>
			<div class="media-body">
			  <%- story.title %>
			</div>
		</a>
		</div>
<% end %>

<div class="container archive">
	<div class="row">
		<div class="col-xs-12">
			<% for obj in @getCollection('archive').toJSON(): %>
				<%= chunk obj %>
			<% end %>
		</div>
	</div>
</div>